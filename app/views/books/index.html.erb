<h1>Books</h1>
<div class="books-box">
    <div class="list-box">
        <table>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to "show", book_path(book.id) %></td>
                    <td><%= link_to "edit", edit_book_path(book.id) %></td>
                    <td><%= link_to "delete", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
                </tr>
            <% end %>
        </table>
    </div>
    <!--投稿フォーム-->
    <div class="new-box">
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
            <h4>title</h4>
            <%= f.text_field :title %>
            
            <h4>body</h4>
            <%= f.text_area :body %>
            
            <%= f.submit 'Create Book' %>
        <% end %>
    </div>
</div>
