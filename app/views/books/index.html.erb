<h1>Books</h1>
<div class="books-box">
    <div class="list-box">
        <table>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to show, show_path(book.id) %></td>
                    <td><%= link_to edit, edit_path(book.id) %></td>
                    <td><%= link_to delete, delete_path(book.id) %></td>
                </tr>
            <% end %>
        </table>
    </div>
    <div class="new-box">
        <% form_with modl: @book, url: '/books', method: post do |f| %>
            <h4>title</h4>
            <%= f.text_field :title %>
            
            <h4>body</h4>
            <%= f.text_area :body %>
            
            <%= f.submit 'Create Book' %>
        <% end %>
    </div>
    <tb></tb>
</div>
