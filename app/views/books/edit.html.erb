<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>errors are occurring
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<div class="edit-box">
    <%= form_with model: @book do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        
        <h4>body</h4>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Update Book' %>
    <% end %>
</div>
<p><%= link_to "Show", book_path(@book.id) %>/<%= link_to "Back", books_path %></p>